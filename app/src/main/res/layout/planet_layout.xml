<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/planetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/planetName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Name"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/woodView"
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planetName"
        app:srcCompat="@drawable/wood" />

    <TextView
        android:id="@+id/woodText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:text="Num of wood"
        app:layout_constraintBottom_toTopOf="@+id/stoneView"
        app:layout_constraintEnd_toStartOf="@+id/woodButton"
        app:layout_constraintStart_toEndOf="@+id/woodView" />

    <ImageView
        android:id="@+id/stoneView"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/woodView"
        app:srcCompat="@drawable/stone" />

    <TextView
        android:id="@+id/stoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:text="Num of stone"
        app:layout_constraintBottom_toBottomOf="@+id/stoneView"
        app:layout_constraintEnd_toStartOf="@+id/stoneButton"
        app:layout_constraintStart_toEndOf="@+id/stoneView" />

    <ImageView
        android:id="@+id/waterView"
        android:layout_width="68dp"
        android:layout_height="71dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stoneView"
        app:srcCompat="@drawable/water" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:text="Num of water"
        app:layout_constraintBottom_toBottomOf="@+id/waterView"
        app:layout_constraintEnd_toStartOf="@+id/waterButton"
        app:layout_constraintStart_toEndOf="@+id/waterView" />

    <Button
        android:id="@+id/woodButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="add builing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planetName" />

    <Button
        android:id="@+id/stoneButton"
        android:layout_width="117dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:text="add building"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/woodButton" />

    <Button
        android:id="@+id/waterButton"
        android:layout_width="117dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="add building"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stoneButton" />
</androidx.constraintlayout.widget.ConstraintLayout>